<mvc:View 
    controllerName="au.gov.humanservices.ccs.ProviderManagement.view.Welcome"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc" >
    <Page 
        id="welcomePage" 
        title="{i18n>welcomeTitle}" 
        enableScrolling="false">
        <content>
            <MessagePage showHeader="false"
                text="{i18n>welcomeText}"
                description=""
                icon="sap-icon://monitor-payments" />
        </content>
        <footer
            id="welcomeFooter">
            <Toolbar 
                id="welcomeToolbar">
            </Toolbar>
        </footer>
    </Page>
</mvc:View>